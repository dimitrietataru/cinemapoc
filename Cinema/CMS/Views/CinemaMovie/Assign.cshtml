@model CMS.Models.CinemaMovie.CinemaMovieViewModel
@{
    ViewData["Title"] = "Assign movie to cinema";
}

<div class="col-lg-12 col-md-12">
    <form asp-action="Assign">
        @Html.HiddenFor(model => model.Movie.Id)
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="panel panel-default mt-40">
            <div class="panel-heading">
                <h3>
                    <span>Choose Cinema for <span style="color:red;">@Model.Movie.Name</span> </span>
                    <span class="pull-right">
                        <a href="@Url.Action("Details", "Movie", new { id = Model.Movie.Id })" title="Details" class="btn btn-default">
                            <span class="glyphicon glyphicon-eye-open"></span>
                        </a>
                        <a href="@Url.Action("Edit", "Movie", new { id = Model.Movie.Id })" title="Edit" class="btn btn-default">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                    </span>
                </h3>
            </div>
            <div class="panel-body" style="height:300px; overflow: auto;">
                @for (var i = 0; i < Model.Cinemas.Count(); i++)
                {
                    <div class="col-sm-12">
                        @Html.HiddenFor(model => model.Cinemas[i].Id)
                        @Html.HiddenFor(model => model.Cinemas[i].Name)
                        @Html.CheckBoxFor(model => model.Cinemas[i].IsAssigned)
                        @Html.DisplayFor(model => model.Cinemas[i].Name)
                    </div>
                }
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>