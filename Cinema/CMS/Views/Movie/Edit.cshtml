@model CMS.Models.Movie.MovieEditViewModel
@{
    ViewData["Title"] = "Edit movie";
}

<div class="col-lg-12 col-md-12">
    <div class="panel panel-default mt-40">
        <div class="panel-heading">
            <h4>EDIT MOVIE</h4>
        </div>
        <div class="panel-body panel-body-responsive">
            <div class="col-lg-12 col-md-12 row">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" class="form-control" />
                    <div class="col-lg-4 col-md-4">
                        <div class="form-group has-feedback">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <i class="form-control-feedback glyphicon glyphicon-asterisk"></i>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <i class="form-control-feedback glyphicon glyphicon-info-sign"></i>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="Duration" class="control-label"></label>
                            <input asp-for="Duration" class="form-control" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                            <i class="form-control-feedback glyphicon glyphicon-hourglass"></i>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="Actors" class="control-label"></label>
                            <input asp-for="Actors" class="form-control" />
                            <span asp-validation-for="Actors" class="text-danger"></span>
                            <i class="form-control-feedback glyphicon glyphicon-user"></i>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="Studio" class="control-label"></label>
                            <input asp-for="Studio" class="form-control" />
                            <span asp-validation-for="Studio" class="text-danger"></span>
                            <i class="form-control-feedback glyphicon glyphicon-facetime-video"></i>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="ProjectionType" class="control-label"></label>
                            <input asp-for="ProjectionType" class="form-control" />
                            <span asp-validation-for="ProjectionType" class="text-danger"></span>
                            <i class="form-control-feedback glyphicon glyphicon-sunglasses"></i>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="Rating" class="control-label"></label>
                            <input asp-for="Rating" class="form-control" />
                            <span asp-validation-for="Rating" class="text-danger"></span>
                            <i class="form-control-feedback glyphicon glyphicon-star"></i>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="Genre" class="control-label"></label>
                            <input asp-for="Genre" class="form-control" />
                            <span asp-validation-for="Genre" class="text-danger"></span>
                            <i class="form-control-feedback glyphicon glyphicon-film"></i>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="TrailerUrl" class="control-label"></label>
                            <input asp-for="TrailerUrl" class="form-control" />
                            <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                            <i class="form-control-feedback glyphicon glyphicon-globe"></i>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="PosterUrl" class="control-label"></label>
                            <input asp-for="PosterUrl" class="form-control" />
                            <span asp-validation-for="PosterUrl" class="text-danger"></span>
                            <i class="form-control-feedback glyphicon glyphicon-globe"></i>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="ImbdUrl" class="control-label"></label>
                            <input asp-for="ImbdUrl" class="form-control" />
                            <span asp-validation-for="ImbdUrl" class="text-danger"></span>
                            <i class="form-control-feedback glyphicon glyphicon-globe"></i>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input asp-for="StartDate" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                            <i class="form-control-feedback glyphicon glyphicon-calendar"></i>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="EndDate" class="control-label"></label>
                            <input asp-for="EndDate" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                            <i class="form-control-feedback glyphicon glyphicon-calendar"></i>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Edit" class="btn btn-default" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-lg-3 col-md-3 btn-group">
                    <a href="@Url.Action("Index", "Movie")" title="Back to list" class="btn btn-default">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                    </a>
                    <a href="@Url.Action("Index", "Home")" title="Home" class="btn btn-default">
                        <span class="glyphicon glyphicon-home"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
