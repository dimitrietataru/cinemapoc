@model CMS.Models.PagerViewModel<CMS.Models.Cinema.CinemaIndexViewModel>

@{
    ViewData["Title"] = "Cinemas";
}

<h2>Cinemas</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Name", "Index", new { page = Model.Pager.page, size = Model.Pager.size, orderBy = "Name", order = !Model.Pager.order }, "Name".Equals(Model.Pager.orderBy) ? new { @style = "color:black" } : null)

                @if ("Name".Equals(Model.Pager.orderBy) && Model.Pager.order)
                {
                    <i class="glyphicon glyphicon-arrow-up"></i>
                }
                else if ("Name".Equals(Model.Pager.orderBy) && !Model.Pager.order)
                {
                    <i class="glyphicon glyphicon-arrow-down"></i>
                }
            </th>
            <th>
                @Html.ActionLink("Location", "Index", new { page = Model.Pager.page, size = Model.Pager.size, orderBy = "Location", order = !Model.Pager.order }, "Location".Equals(Model.Pager.orderBy) ? new { @style = "color:black" } : null)

                @if ("Location".Equals(Model.Pager.orderBy) && Model.Pager.order)
                {
                    <i class="glyphicon glyphicon-arrow-up"></i>
                }
                else if ("Location".Equals(Model.Pager.orderBy) && !Model.Pager.order)
                {
                    <i class="glyphicon glyphicon-arrow-down"></i>
                }
            </th>
            <th>
                Adress
            </th>
            <th>
                Contact
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("<<<", "Index", new { page = Model.Pager.page - 1, size = Model.Pager.size, orderBy = Model.Pager.orderBy, order = Model.Pager.order })
@Html.ActionLink(">>>", "Index", new { page = Model.Pager.page + 1, size = Model.Pager.size, orderBy = Model.Pager.orderBy, order = Model.Pager.order })
